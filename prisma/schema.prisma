generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlserver"
}

// ====== USER ======
model User {
  id            String   @id @map("discord_id")
  username      String   @map("discord_username")
  avatar        String?  @map("discord_avatar")
  globalName    String?  @map("discord_global_name")
  discriminator String?  @map("discord_discriminator")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  // RELAÇÕES
  addedImages Image[]          @relation("AddedImages")
  categories  ImagesCategory[]

  @@map("users")
}

// ====== IMAGES ======
model Image {
  id          String  @id @default(cuid())
  url         String  @unique
  title       String?
  description String?

  categoryId String            @map("category_id")
  category   ImagesCategory @relation(fields: [categoryId], references: [id], onUpdate: NoAction, onDelete: NoAction)

  addedById  String @map("added_by_id")
  addedBy    User   @relation("AddedImages", fields: [addedById], references: [id], onUpdate: NoAction, onDelete: NoAction)

  tags    String? // String normalizada separada por vírgulas: "meme,funny,game"
  addedAt DateTime @default(now()) @map("added_at")

  @@index([categoryId])
  @@index([addedById])
  @@map("images")
}

model ImagesCategory {
  id        String   @id @default(cuid())
  name      String   @unique
  addedById String   @map("added_by_id")
  addedBy   User     @relation(fields: [addedById], references: [id])
  addedAt   DateTime @default(now()) @map("added_at")
  images    Image[]

  @@map("images_category")
}
